{
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.1",
        "php-stubs/woocommerce-stubs": "^10.0",
        "wpify/scoper": "3.1.3"
    },
    "autoload": {
        "psr-4": {
            "Krokedil\\KustomCheckout\\": "src/",
            "Krokedil\\KustomCheckout\\Blocks\\": "blocks/src/"
        }
    },
    "extra": {
        "wpify-scoper": {
            "prefix": "KrokedilKlarnaCheckoutDeps",
            "folder": "dependencies",
            "autorun": true,
            "globals": [
                "wordpress",
                "woocommerce"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "wpify/scoper": true
        }
    }
}
