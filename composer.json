{
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.1",
        "php-stubs/woocommerce-stubs": "^10.0",
        "wpify/scoper": "3.1.3"
    },
    "autoload": {
        "psr-4": {
            "Krokedil\\KustomCheckout\\": "src/",
            "Krokedil\\KustomCheckout\\Blocks\\": "blocks/src/"
        }
    },
    "extra": {
        "wpify-scoper": {
            "prefix": "KrokedilKlarnaCheckoutDeps",
            "folder": "dependencies",
            "autorun": true,
            "globals": [
                "wordpress",
                "woocommerce"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "wpify/scoper": true
        }
    },
    "scripts": {
        "get-changelog": "bash .github/scripts/new-version.sh",
        "update-version": "bash .github/scripts/new-version.sh update",
        "create-changelog": "bash .github/scripts/new-changelog.sh",
        "pre-release-check": [
            "bash .github/scripts/check-changelog-master.sh",
            "bash .github/scripts/check-version-and-compat.sh"
        ],
        "lint": "vendor/bin/phpcs . --standard=phpcs.xml --extensions=php -q",
        "lint:fix": "vendor/bin/phpcbf . --standard=phpcs.xml --extensions=php -q",
        "lint:changes": "git diff --name-only HEAD~1 | grep '\\.php$' | xargs vendor/bin/phpcs --standard=phpcs.xml --extensions=php -q",
        "lint:fix:changes": "git diff --name-only HEAD~1 | grep '\\.php$' | xargs vendor/bin/phpcbf --standard=phpcs.xml --extensions=php -q"
    }
}
